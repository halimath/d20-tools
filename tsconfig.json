{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es2015",
        "strictNullChecks": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "ES2020",
            "dom"
        ],
        "experimentalDecorators": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "d20-tools/*": ["src/*"],
        },
    },
    "include": [
        "src/**/*.ts",
    ]
}